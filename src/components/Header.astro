        <img src="https://cdn.pixabay.com/photo/2022/03/08/15/44/boy-7056003_960_720.jpg" alt="Imagen descriptiva 2" />
      </div>
      
      <!-- Slide 3 -->
      <div class="swiper-slide">
        <div class="slide-content">
          <div class="content-overlay">
            <h2 class="slide-title">Contacta con Nosotros</h2>
            <p class="slide-subtitle">Estamos aquí para ayudarte</p>
            <div class="social-icons">
              <a href="#" aria-label="Facebook" class="social-icon"><i class="fab fa-facebook"></i></a>
              <a href="#" aria-label="Twitter" class="social-icon"><i class="fab fa-twitter"></i></a>
